doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=0.8, maximum-scale=0.8')
    link(href='https://fonts.googleapis.com/css?family=Lato&display=swap', rel='stylesheet')
  body
      #container(style='margin: 0 auto; background-color: #ffffff;')
        if languageDir === 'rtl'
          #header(style='padding: 25px 0 0px; border-bottom: 1px solid #334750; text-align: right; height: 65px')
            img(src='https://stage-nora-science37.s3-us-west-2.amazonaws.com/public-email-assets/science37-logo-white.png', alt='logo', style='height: 40px;	width: 128px;')
          #content(style='border-bottom: 1px solid #F8F9F9; text-align: right; direction: rtl;')
            h4(style="color: #334750;	font-family: 'Lato', sans-serif; font-weight: normal;	font-size: 26px;	line-height: 32px; margin: 40px 0 30px;") #{greeting}
            p(style="color: #334750; font-family: 'Lato', sans-serif; font-size: 14px; line-height: 20px;") #{p2}
            p(style="color: #334750; font-family: 'Lato', sans-serif; font-size: 14px; line-height: 20px;") #{p3_0}
              a(href='https://science37.atlassian.net/servicedesk/customer/portal/9') #{p3_1}
              span #{p3_2}
            p(style="color: #334750; font-family: 'Lato', sans-serif; font-size: 14px; line-height: 20px; margin-top: 28px;") #{sendOff}
              br
              span #{signature}
          #footer(style="padding: 34px 20px; background-color: #F8F9F9; color: #637381; font-family: 'Lato', sans-serif;	font-size: 12px;	line-height: 16px;	text-align: center;")
            p #{footer_warning}
              br
            span #{footer_address}
            div
              br
              a(href=footer_privacy_link_url, style='color: #637381; text-decoration: none;') #{footer_privacy_policy_link}
        else
          #header(style='padding: 25px 0 0px; border-bottom: 1px solid #334750; text-align: left; height: 65px')
            img(src='https://stage-nora-science37.s3-us-west-2.amazonaws.com/public-email-assets/science37-logo-white.png', alt='logo', style='height: 40px;	width: 128px;')
          #content(style='border-bottom: 1px solid #F8F9F9; text-align: left;')
            h4(style="color: #334750;	font-family: 'Lato', sans-serif; font-weight: normal;	font-size: 26px;	line-height: 32px; margin: 40px 0 30px;") #{greeting}
            p(style="color: #334750; font-family: 'Lato', sans-serif; font-size: 14px; line-height: 20px;") #{p2}
            if p3_0  
              p(style="color: #334750; font-family: 'Lato', sans-serif; font-size: 14px; line-height: 20px;") #{p3_0}
                a(href='https://science37.atlassian.net/servicedesk/customer/portal/9') #{p3_1}
                span #{p3_2}
            else
              p(style="color: #334750; font-family: 'Lato', sans-serif; font-size: 14px; line-height: 20px;") #{p3}
            p(style="color: #334750; font-family: 'Lato', sans-serif; font-size: 14px; line-height: 20px; margin-top: 28px;") #{sendOff}
              br
              span #{signature}
          #footer(style="padding: 34px 20px; background-color: #F8F9F9; color: #637381; font-family: 'Lato', sans-serif;	font-size: 12px;	line-height: 16px;	text-align: center;")
            p #{footer_warning}
              br
            span #{footer_address}
            div
              br
              a(href=footer_privacy_link_url, style='color: #637381; text-decoration: none;') #{footer_privacy_policy_link}
